/* Parameterized class for the switch thingy */

// Normal switch
.switch(@switchButtonWidth, @color, @enabledString, @disabledString) {
  .switch(@switchButtonWidth, @color, #a8acb1, @color, @enabledString, @disabledString);
}

//Switch with always-on state and one text-color
.switch(@switchButtonWidth, @color, @text-color-on, @enabledString, @disabledString) {
  .switch(@switchButtonWidth, @color, @color, @text-color-on, @enabledString, @disabledString);
}

.switch(@switchButtonWidth, @color, @circle-color-off, @text-color-on, @enabledString, @disabledString) {
  width: @switchButtonWidth; //64px;
  height: 22px;
  border-radius: 11px;
  position: relative;
  background-color: #fff;
  overflow: hidden;
  font-family: 'Open Sans', sans-serif;
  font-weight: @weight-bolder;
  font-size: 11px;
  cursor: pointer;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

  z-index: 1; /* disables flickering in webkit when hovering */

  .knob, .body:before, .body:after, .knob:after {
    .transition-custom(transform 0.2s cubic-bezier(0.35, 0, 0.35, 1))
  }

  .body:before, .body:after {
    -webkit-transition-duration: 0.3s;
    -moz-transition-duration: 0.3s;
    -ms-transition-duration: 0.3s;
    transition-duration: 0.3s;
  }

  .body, .body:before, .body:after {
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    vertical-align: middle;
    background-color: rgba(255,0,0,0.5);
    line-height: 0;
    box-sizing: border-box;
    text-align: center;
  }

  .knob {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -7px;
    margin-top: -7px;
    width: 14px;
    height: 14px;
    border-radius: 7px;

    &:after {
      content: '';
      position: absolute;
      left: -1px;
      top: -1px;
      width: 16px;
      height: 16px;
      border-radius: 8px;
      box-sizing: border-box;
      border: 3px solid;
      background-color: #fff;
      .transform(scale(0));
    }
  }

  .body {
    &:before {
      content: @enabledString;
      padding-right: 15px;
      color: @text-color-on;
    }
    &:after {
      content: @disabledString;
      padding-left: 15px;
      color: #a8acb1;
    }
  }

  &:hover {
    .knob:after {
      .transform(scale(1));
      border-color: @color;
    }
  }

  // Mixin
  .onStateStyle() {
    .knob {
      .transform(translate3d(@switchButtonWidth / 2 - 12, 0, 0));
      background-color: #a8acb1;

      &:after {
        .transform(scale(1));
        border-color: @color;
      }
    }
    .body:after {
      .transform(translate3d(@switchButtonWidth - 24, 0, 0));
    }
  }

  // On state
  &.on {
    .onStateStyle;
  }

  // Off state
  &.off {
    .knob {
      .transform(translate3d(-(@switchButtonWidth / 2 - 12), 0, 0));
      background-color: @circle-color-off;
    }
    .body:before {
      .transform(translate3d(-(@switchButtonWidth - 24), 0, 0));
    }
  }

  // Disabled state
  &.disabled {
    .onStateStyle();
    .knob:after {
      border-color: #a8acb1;
    }
    .body:before {
      color: #a8acb1;
    }
  }
}




